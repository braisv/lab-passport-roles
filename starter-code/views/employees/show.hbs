<div class="flex-column">
  <h2>Employee Info</h2>

  <div class="profile flex-column">
    {{#with employee}}
      <div class="flex prof">
        <h3>Name:</h3>
        <p>{{this.name}}
      </div>
      <div class="flex prof">
        <h3>Info:</h3>
        <p>{{this.info}}
      </div>
      <div class="flex prof">
        <h3>Role:</h3>
        <p>{{this.role}}
      </div>
    {{/with}}
  </div>
</div>